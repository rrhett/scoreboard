<html>

<head>
  <script src="control.js" type="module" defer></script>
  <script src="https://cdn.tailwindcss.com"></script>
  <style type="text/tailwindcss">
    body {
  font-family: "Inter", sans-serif;
  background-color: white;
}
html {
  font-size: xx-large;
}
fieldset {
  border: 0;
  display: inline;
  font-size: xx-large;
}
button {
  @apply bg-transparent hover:bg-blue-500 text-blue-700 font-semibold
    hover:text-white py-2 px-4 border border-blue-500 hover:border-transparent
    rounded;
}
input {
  font-size: x-large;
}
.inputscores {
  background-color: #ffffff;
  padding: .5rem;
  border-radius: 0.75rem; /* rounded-xl */
  box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05); /* shadow-lg */
  max-width: 400px;
  width: 100%;
  text-align: center;
}
.input-field {
  padding: 0.75rem 1rem;
  border: 1px solid #d1d5db; /* border-gray-300 */
  border-radius: 0.5rem; /* rounded-lg */
  width: 100%;
  font-size: 1rem;
  margin-bottom: 1rem;
  transition: border-color 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
}
.input-field:focus {
  outline: none;
  border-color: #3b82f6; /* blue-500 */
  box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.25); /* ring-blue-500/50 */
}
</style>
  <title>Control</title>
</head>

<body>

  <div id="setup" style="padding: 30px">
    <div id="players">Player:</div>
    <div>
      <input type="text" class="input-field" id="player" name="player" size="15" />
      <button type="button" id="add">Add Player</button>
    </div>

    <div style="padding: 30px">
      <button type="button" id="start">Start Game</button>
    </div>
  </div>

  <div id="scores" style="display: none">
    <div id="inputscores" class="inputscores"></div>
    <div style="padding: 30px">
      <button type="button" id="post">Post&nbsp;Round</button>
    </div>
  </div>

  <div style="padding: 30px">
    <button type="button" id="reset">Reset</button>
  </div>

  <div style="padding: 30px">
    <button type="button" id="fullscreen" title="Toggle Full Screen">
      <!-- Enter Full Screen Icon -->
      <svg id="icon-enter" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none"
        stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
        style="display: inline-block;">
        <path d="M8 3H5a2 2 0 0 0-2 2v3m18 0V5a2 2 0 0 0-2-2h-3m0 18h3a2 2 0 0 0 2-2v-3M3 16v3a2 2 0 0 0 2 2h3"></path>
      </svg>
      <!-- Exit Full Screen Icon -->
      <svg id="icon-exit" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none"
        stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="display: none;">
        <path d="M8 3v3a2 2 0 0 1-2 2H3m18 0h-3a2 2 0 0 1-2-2V3m0 18v-3a2 2 0 0 1 2-2h3M3 16h3a2 2 0 0 1 2 2v3"></path>
      </svg>
    </button>
  </div>

</body>

</html>