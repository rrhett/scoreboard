<html>

<head>
  <script src="control.js" type="module" defer></script>
  <script src="https://cdn.tailwindcss.com"></script>
  <style type="text/tailwindcss">
    body {
  font-family: "Inter", sans-serif;
  background-color: white;
}
html {
  font-size: xx-large;
}
fieldset {
  border: 0;
  display: inline;
  font-size: xx-large;
}
button {
  @apply bg-transparent hover:bg-blue-500 text-blue-700 font-semibold
    hover:text-white py-2 px-4 border border-blue-500 hover:border-transparent
    rounded;
}
input {
  font-size: x-large;
}
.inputscores {
  background-color: #ffffff;
  padding: .5rem;
  border-radius: 0.75rem; /* rounded-xl */
  box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05); /* shadow-lg */
  max-width: 400px;
  width: 100%;
  text-align: center;
}
.input-field {
  padding: 0.75rem 1rem;
  border: 1px solid #d1d5db; /* border-gray-300 */
  border-radius: 0.5rem; /* rounded-lg */
  width: 100%;
  font-size: 1rem;
  margin-bottom: 1rem;
  transition: border-color 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
}
.input-field:focus {
  outline: none;
  border-color: #3b82f6; /* blue-500 */
  box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.25); /* ring-blue-500/50 */
}
</style>
  <title>Control</title>
</head>

<body>

  <div id="setup" class="space-y-6 p-8">
    <div class="w-full max-w-xs space-y-4 mx-auto">
      <div id="players" class="text-lg font-semibold text-center min-h-[1.5em]">Players:</div>
      <div class="space-y-2">
        <label for="player" class="block text-gray-700 text-sm font-bold">Player Name:</label>
        <input type="text" class="input-field w-full" id="player" name="player" placeholder="Enter name" />
        <button type="button" id="add" class="w-full py-2">Add</button>
      </div>
    </div>

    <div class="w-full max-w-xs mx-auto">
      <button type="button" id="start" class="w-full py-3 text-xl whitespace-nowrap">Start</button>
    </div>

    <div id="quick-start" class="w-full max-w-xs mx-auto space-y-2 pt-4 border-t border-gray-200"
      style="display: none;">
      <div class="text-sm font-semibold text-gray-500 text-center">Quick Start</div>
      <div id="quick-start-buttons" class="space-y-2"></div>
    </div>
  </div>

  <div id="scores" style="display: none" class="space-y-6 p-8">
    <div id="inputscores" class="inputscores w-full max-w-xs mx-auto"></div>
    <div class="w-full max-w-xs mx-auto">
      <button type="button" id="post" class="w-full py-3 text-xl">Post Round</button>
    </div>
  </div>

  <div id="game-over" style="display: none" class="space-y-6 p-8 text-center">
    <h2 class="text-3xl font-bold text-gray-800">Game Over!</h2>
    <div id="winner-display" class="text-xl text-gray-700"></div>
    <div class="w-full max-w-xs mx-auto pt-4">
      <button type="button" id="replay"
        class="w-full py-3 text-xl bg-blue-500 text-white hover:bg-blue-600 border-transparent">Replay</button>
    </div>
  </div>

  <div class="fixed bottom-4 left-4">
    <button type="button" id="reset" class="text-sm py-1 px-3">Reset</button>
  </div>

  <div class="fixed bottom-4 right-4">
    <button type="button" id="fullscreen" title="Toggle Full Screen"
      class="p-2 rounded-full bg-transparent text-blue-700 border border-blue-500 hover:bg-blue-500 hover:text-white hover:border-transparent transition-colors duration-200">
      <!-- Enter Full Screen Icon -->
      <svg id="icon-enter" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none"
        stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
        style="display: inline-block;">
        <path d="M8 3H5a2 2 0 0 0-2 2v3 M21 8V5a2 2 0 0 0-2-2h-3 M3 16v3a2 2 0 0 0 2 2h3 M16 21h3a2 2 0 0 0 2-2v-3">
        </path>
      </svg>
      <!-- Exit Full Screen Icon -->
      <svg id="icon-exit" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none"
        stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="display: none;">
        <path d="M8 3v3a2 2 0 0 1-2 2H3m18 0h-3a2 2 0 0 1-2-2V3m0 18v-3a2 2 0 0 1 2-2h3M3 16h3a2 2 0 0 1 2 2v3"></path>
      </svg>
    </button>
  </div>

</body>

</html>