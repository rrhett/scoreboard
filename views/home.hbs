<html>

<head>
  <script src="main.js" type="module" defer></script>
  <title>Game Board</title>
  <style>
    html {
      font-size: 24px;
    }

    #gameboard {
      text-align: center;
      margin: auto;
      width: max-content;
      padding: 10px;
    }

    #ss {
      padding: 10px;
      display: none;
    }

    .went-out {
      color: #0f0;
    }

    .went-out-first {
      text-decoration: underline;
    }

    .in-the-lead {
      background-color: #0f04;
    }

    table {
      font-size: 44px;
      margin: auto;
      border-collapse: collapse;
      border: 1px solid #000;
    }

    th {
      border-bottom: solid 1px #000;
      padding: 5px 10px;
    }

    td {
      padding: 2px 60px;
      text-align: right;
    }

    .inner-score {
      border-left: solid 1px #000;
      border-right: solid 1px #000;
    }

    .bottom-row {
      border-bottom: solid 1px #000;
    }

    #wakelock-status {
      position: fixed;
      top: 10px;
      right: 10px;
      width: 24px;
      height: 24px;
      transition: opacity 0.3s, color 0.3s;
      z-index: 1000;
    }

    #wakelock-status.active {
      opacity: 1;
      color: #FFC107;
      /* Sun color */
    }

    #wakelock-status.inactive {
      opacity: 0.6;
      /* More visible than before */
      color: #9E9E9E;
      /* Moon color */
    }

    .icon-sun,
    .icon-moon {
      display: none;
    }

    #wakelock-status.active .icon-sun {
      display: block;
    }

    #wakelock-status.inactive .icon-moon {
      display: block;
    }
  </style>
</head>

<body>

  <div id="wakelock-status" class="inactive" title="Wakelock Status">
    <!-- Sun Icon -->
    <svg class="icon-sun" viewBox="0 0 24 24" fill="currentColor">
      <path
        d="M6.76 4.84l-1.8-1.79-1.41 1.41 1.79 1.79 1.42-1.41zM4 10.5H1v2h3v-2zm9-9.95h-2V3.5h2V.55zm7.45 3.91l-1.41-1.41-1.79 1.79 1.41 1.41 1.79-1.79zm-3.21 13.7l1.79 1.79 1.41-1.41-1.79-1.79-1.41 1.41zM20 10.5v2h3v-2h-3zm-8-5c-3.31 0-6 2.69-6 6s2.69 6 6 6 6-2.69 6-6-2.69-6-6-6zm-1 16.95h2V19.5h-2v2.95zm-7.45-3.91l1.41 1.41 1.79-1.8-1.41-1.41-1.79 1.8z" />
    </svg>
    <!-- Moon Icon -->
    <svg class="icon-moon" viewBox="0 0 24 24" fill="currentColor">
      <path
        d="M10 2c-1.82 0-3.53.5-5 1.35C7.99 5.08 10 8.3 10 12s-2.01 6.92-5 8.65C6.47 21.5 8.18 22 10 22c5.52 0 10-4.48 10-10S15.52 2 10 2z" />
    </svg>
  </div>

  <div id="left"></div>
  <div id="gameboard">
    <h1>Five Crowns</h1>

    <div id="round" class="round"></div>
    <div id="dealer" class="dealer"></div>
    <div id="scores"></div>

    <div id="ss">
      <button type="button" id="screenshot">Screenshot</button>
    </div>
  </div>
  <div id="right"></div>

</body>

</html>