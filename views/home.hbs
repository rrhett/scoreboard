<html>

<head>
  <script src="main.js" type="module" defer></script>
  <title>Game Board</title>
  <style>
    html {
      font-size: 24px;
    }

    #scoreboard {
      text-align: center;
      margin: auto;
      width: max-content;
      padding: 10px;
    }

    #ss {
      padding: 10px;
      display: none;
    }

    .went-out {
      color: #0f0;
    }

    .went-out-first {
      text-decoration: underline;
    }

    .in-the-lead {
      background-color: #0f04;
    }

    table {
      font-size: 44px;
      margin: auto;
      border-collapse: collapse;
      border: 1px solid #000;
    }

    th {
      border-bottom: solid 1px #000;
      padding: 5px 10px;
    }

    td {
      padding: 2px 60px;
      text-align: right;
    }

    .inner-score {
      border-left: solid 1px #000;
      border-right: solid 1px #000;
    }

    .bottom-row {
      border-bottom: solid 1px #000;
    }

    .top-right-controls {
      position: fixed;
      top: 10px;
      right: 10px;
      display: flex;
      gap: 15px;
      align-items: center;
      z-index: 1000;
    }

    #wakelock-status {
      width: 24px;
      height: 24px;
      transition: opacity 0.3s, color 0.3s;
      cursor: pointer;
    }

    #wakelock-status.active {
      opacity: 1;
      color: #FFC107;
      /* Sun color */
    }

    #wakelock-status.inactive {
      opacity: 0.6;
      /* More visible than before */
      color: #9E9E9E;
      /* Moon color */
    }

    #wakelock-status.error {
      opacity: 1;
      color: #F44336;
      /* Red color */
    }

    .icon-sun,
    .icon-moon,
    .icon-error {
      display: none;
    }

    #wakelock-status.active .icon-sun {
      display: block;
    }

    #wakelock-status.inactive .icon-moon {
      display: block;
    }

    #wakelock-status.error .icon-error {
      display: block;
    }

    .history-link {
      color: #000;
      opacity: 0.6;
      transition: opacity 0.3s;
      display: flex;
      align-items: center;
      text-decoration: none;
    }

    .history-link:hover {
      opacity: 1;
    }

    .history-icon {
      width: 24px;
      height: 24px;
    }
  </style>
</head>

<body>

  <div class="top-right-controls">
    <a href="/scores" class="history-link" title="Game History">
      <svg class="history-icon" viewBox="0 0 24 24" fill="currentColor">
        <path
          d="M13 3c-4.97 0-9 4.03-9 9H1l3.89 3.89.07.14L9 12H6c0-3.87 3.13-7 7-7s7 3.13 7 7-3.13 7-7 7c-1.93 0-3.68-.79-4.94-2.06l-1.42 1.42C8.27 19.99 10.51 21 13 21c4.97 0 9-4.03 9-9s-4.03-9-9-9zm-1 5v5l4.28 2.54.72-1.21-3.5-2.08V8H12z" />
      </svg>
    </a>
    <div id="wakelock-status" class="inactive" title="Wakelock Status">
      <!-- Sun Icon -->
      <svg class="icon-sun" viewBox="0 0 24 24" fill="currentColor">
        <path
          d="M6.76 4.84l-1.8-1.79-1.41 1.41 1.79 1.79 1.42-1.41zM4 10.5H1v2h3v-2zm9-9.95h-2V3.5h2V.55zm7.45 3.91l-1.41-1.41-1.79 1.79 1.41 1.41 1.79-1.79zm-3.21 13.7l1.79 1.79 1.41-1.41-1.79-1.79-1.41 1.41zM20 10.5v2h3v-2h-3zm-8-5c-3.31 0-6 2.69-6 6s2.69 6 6 6 6-2.69 6-6-2.69-6-6-6zm-1 16.95h2V19.5h-2v2.95zm-7.45-3.91l1.41 1.41 1.79-1.8-1.41-1.41-1.79 1.8z" />
      </svg>
      <!-- Moon Icon -->
      <svg class="icon-moon" viewBox="0 0 24 24" fill="currentColor">
        <path
          d="M10 2c-1.82 0-3.53.5-5 1.35C7.99 5.08 10 8.3 10 12s-2.01 6.92-5 8.65C6.47 21.5 8.18 22 10 22c5.52 0 10-4.48 10-10S15.52 2 10 2z" />
      </svg>
      <!-- Error Icon -->
      <svg class="icon-error" viewBox="0 0 24 24" fill="currentColor">
        <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 15h-2v-2h2v2zm0-4h-2V7h2v6z" />
      </svg>
    </div>
  </div>

  <div id="left"></div>
  <div id="scoreboard">
    <h1>Five Crowns</h1>

    <div id="round" class="round"></div>
    <div id="dealer" class="dealer"></div>
    <div id="scores"></div>

    <div id="ss">
      <button type="button" id="screenshot">Screenshot</button>
    </div>
  </div>
  <div id="right"></div>

</body>

</html>
