<html>

<head>
  <title>Game History</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <style type="text/tailwindcss">
    body {
      font-family: "Inter", sans-serif;
      background-color: #f3f4f6;
      padding: 20px;
    }
    .game-row {
      @apply bg-white p-4 rounded-lg shadow mb-4 cursor-pointer hover:shadow-md transition-shadow;
    }
    .game-summary {
      @apply flex justify-between items-center;
    }
    .game-details {
      @apply mt-4 border-t pt-4 hidden;
    }
    .game-details.open {
      @apply block;
    }
    .score-table {
      @apply w-full text-left border-collapse;
    }
    .score-table th, .score-table td {
      @apply p-2 border-b;
    }
    .winner {
      @apply font-bold text-green-600;
    }
    .btn {
      @apply px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600 disabled:opacity-50 disabled:cursor-not-allowed;
    }
    .btn-delete {
        @apply px-2 py-1 bg-red-500 text-white rounded hover:bg-red-600 text-sm ml-2;
    }
  </style>
</head>

<body>
  <div class="max-w-4xl mx-auto">
    <div class="flex justify-between items-center mb-6">
      <h1 class="text-3xl font-bold">Game History</h1>
      <a href="/" class="text-blue-500 hover:underline flex items-center">
        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        Back to Game
      </a>
    </div>

    <div id="games-list"></div>

    <div class="flex justify-between items-center mt-6">
      <button id="prev-btn" class="btn" disabled>Previous</button>
      <span id="page-info">Page 1</span>
      <button id="next-btn" class="btn" disabled>Next</button>
    </div>
  </div>

  <script>
    let currentPage = 1;
    const limit = 10;
    const urlParams = new URLSearchParams(window.location.search);
    const isTesting = urlParams.has('testing');

    async function fetchGames(page) {
      try {
        const response = await fetch(`/api/games?page=${page}&limit=${limit}`);
        const data = await response.json();
        renderGames(data.games);
        updatePagination(data.currentPage, data.totalPages);
      } catch (error) {
        console.error('Error fetching games:', error);
      }
    }

    function renderGames(games) {
      const list = document.getElementById('games-list');
      list.innerHTML = '';

      if (games.length === 0) {
        list.innerHTML = '<p class="text-gray-500 text-center">No games found.</p>';
        return;
      }

      games.forEach(game => {
        const date = new Date(game.startTime).toLocaleString();
        const winnerName = game.players[game.winner] || 'Unknown';

        const div = document.createElement('div');
        div.className = 'game-row';
        div.innerHTML = `
          <div class="game-summary">
            <div>
              <span class="font-semibold">${date}</span>
              <span class="mx-2 text-gray-400">|</span>
              <span>Winner: <span class="winner">${winnerName}</span></span>
            </div>
            <div class="flex items-center">
                <span class="text-gray-500 text-sm mr-2">Click to expand</span>
                <button class="btn-replay text-blue-500 hover:text-blue-700 mr-2" title="Replay Game" onclick="event.stopPropagation(); replayGame(${game.id})">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
                    </svg>
                </button>
                ${isTesting ? `<button class="btn-delete" data-id="${game.id}" onclick="event.stopPropagation(); deleteGame(${game.id})">Delete</button>` : ''}
            </div>
          </div>
          <div class="game-details">
            <table class="score-table">
              <thead>
                <tr>
                  <th>Round</th>
                  ${game.players.map(p => `<th>${p}</th>`).join('')}
                </tr>
              </thead>
              <tbody>
                ${game.scores.map((round, i) => `
                  <tr>
                    <td>${i + 1}</td>
                    ${round.map((score, pIndex) => `
                      <td class="${pIndex === game.winner ? 'winner' : ''}">${score}</td>
                    `).join('')}
                  </tr>
                `).join('')}
                <tr class="font-bold bg-gray-50">
                  <td>Total</td>
                  ${game.players.map((_, i) => {
          const total = game.scores.reduce((sum, r) => sum + (r[i] || 0), 0);
          return `<td class="${i === game.winner ? 'winner' : ''}">${total}</td>`;
        }).join('')}
                </tr>
              </tbody>
            </table>
          </div>
        `;

        div.addEventListener('click', () => {
          const details = div.querySelector('.game-details');
          details.classList.toggle('open');
        });

        list.appendChild(div);
      });
    }

    function updatePagination(current, total) {
      currentPage = current;
      document.getElementById('page-info').textContent = `Page ${current} of ${total || 1}`;
      document.getElementById('prev-btn').disabled = current <= 1;
      document.getElementById('next-btn').disabled = current >= total;
    }

    async function replayGame(id) {
      if (!confirm('Start a new game with these players?')) return;
      try {
        const response = await fetch('/api/replay', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify({ id })
        });
        if (response.ok) {
          if (window.top !== window.self) {
            window.top.location.reload();
          } else {
            window.location.href = '/';
          }
        } else {
          alert('Failed to replay game');
        }
      } catch (e) {
        console.error(e);
        alert('Error replaying game');
      }
    }

    async function deleteGame(id) {
      if (!confirm('Are you sure you want to delete this game?')) return;
      try {
        const response = await fetch(`/api/games/${id}?testing=1`, { method: 'DELETE' });
        if (response.ok) {
          fetchGames(currentPage);
        } else {
          alert('Failed to delete game');
        }
      } catch (e) {
        console.error(e);
        alert('Error deleting game');
      }
    }

    document.getElementById('prev-btn').addEventListener('click', () => {
      if (currentPage > 1) fetchGames(currentPage - 1);
    });

    document.getElementById('next-btn').addEventListener('click', () => {
      fetchGames(currentPage + 1);
    });

    // Initial fetch
    fetchGames(currentPage);
  </script>
</body>

</html>